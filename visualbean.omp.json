{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
            {
                "type": "time",
                "style": "diamond",
                "powerline_symbol": "",
                "invert_powerline": false,
                "foreground": "#fafafa",
                "background": "#2f2f2f",
                "leading_diamond": "\uE0B6",
                "trailing_diamond": "\uE0B0",
                "properties": {
                    "postfix": "\u003c#007ACC\u003e Ôôè \u003c/\u003e",
                    "time_format": "15:04:05"
                }
            },
            {
                "type": "spotify",
                "style": "powerline",
                "powerline_symbol": "\uE0B0",
                "foreground": "#fafafa",
                "background": "#1BD760",
                "properties": {
                  "prefix": "\uF9C6 ",
                  "playing_icon": "\uE602 ",
                  "paused_icon": "\uF8E3 ",
                  "stopped_icon": "\uF04D ",
                  "track_separator" : " - "
                }
              },
          {
            "type": "path",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#fafafa",
            "background": "#4a87a1",
            "properties": {
              "prefix": " \uE5FF ",
                "style": "full"
            }
          },
          {
            "type": "git",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#6a6a6a",
            "background": "#2f2f2f",
            "properties": {
                "display_stash_count": true,
                "display_upstream_icon": true,
                "display_status": true,
                "status_colors_enabled": true,
                "color_background": false,
                "local_changes_color": "#ffeb3b",
                "working_color": "#E84855",
                "staging_color": "#2FDA4E",
                "ahead_color": "#2EC4B6",
                "behind_color": "#8A4FFF"
              }
          },
          {
            "type": "root",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#193549",
            "background": "#ffff66"
          }
        ]
      },
      {
        "type": "newline"
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "foreground": "#7a7a7a",
            "properties": {
              "text": "~#@\u276F"
            }
          }
        ]
      }
    ],
    "final_space": true
  }
